---
interface Project {
  id: number;
  title: string;
  description: string;

  image: string;
  link: string;
  isDeployed?: {
    link: string;
  };
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div>
  <h3 class="title">{project.title}</h3>
  <p class="description">{project.description}</p>
  <div class="imageContainer">
    <img src={project.image} alt="Project" />
  </div>
  <div class="links">
    <a href={project.link} class="btnDark" target="_blank" rel="noopener noreferrer">
      <i class="fa-brands fa-github fa-lg"></i> Github Repository
    </a>
    {
      project.isDeployed && (
        <a href={project.isDeployed.link} class="btnDark" target="_blank" rel="noopener noreferrer">
          <i class="fa-brands fa-internet-explorer fa-lg" /> Live Demo
        </a>
      )
    }
  </div>
</div>

<style>
  .imageContainer {
    height: 350px;
    max-height: 350px;
    border: 1px solid #545454;
    border-radius: 10px;
  }

  @media screen and (max-width: 442px) {
    .imageContainer {
      height: 280px;
      max-height: 280px;
    }
  }

  img {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    padding: 0.2rem;
    object-fit: contain;
  }

  img:hover {
    opacity: 0.5;
    border-color: #eece1a;
    transition: all 0.5s ease-out;
  }

  .btnDark {
    background: black;
    color: #fff;
    display: block;
    padding: 0.5rem 1rem;
    border: 0;
    border-radius: 10px;
    margin: 0.5rem 0;
    text-decoration: none;
    flex: 1 0 0%;
  }

  .btnDark:hover {
    background: #eece1a;
    color: #000;
  }

  .description {
    padding: 10px 10px;
    height: 120px;
    max-height: 120px;
    overflow: auto;
    color: #fff;
    background-color: #212121;
    border-radius: 12px;
    font-size: 17px;
    margin-bottom: 0.5rem;
  }

  .description::-webkit-scrollbar {
    width: 10px;
    background-color: #202020;
  }

  .description::-webkit-scrollbar-thumb {
    background-color: #393939;
    border-radius: 12px;
    border: 1px solid #606060;
  }

  .title {
    color: #fff;
    font-size: 24px;
    text-align: center;
    text-transform: uppercase;
    margin: auto;
  }

  .links {
    display: flex;
  }

  .links a:first-child {
    margin-right: 0.5rem;
  }
</style>
