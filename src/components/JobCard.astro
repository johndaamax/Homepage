---
import { Job } from '../data/jobs';

interface Props {
  job: Job;
}

const { job } = Astro.props;
---

<div class="card">
  <h3><strong>{job.company}</strong></h3>
  <span class="duration">{job.fromTo}</span>
  <h4>{job.title}</h4>
  <h5>{job.type}</h5>
  <hr />
  <p>{job.description}</p>
</div>

<style>
  .card {
    display: flex;
    flex-flow: column wrap;
    border-radius: 16px;
    margin-bottom: 2.5rem;
  }

  .duration {
    color: #f27689;
  }

  hr {
    border-top: 2px solid #a7a7a7;
    margin: 0.3rem 0;
  }

  @media screen and (min-width: 768px) {
    .cardWrapper {
      font-size: 120%;
    }
  }
</style>
