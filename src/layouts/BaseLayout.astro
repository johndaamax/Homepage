---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../globalStyles.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://kit.fontawesome.com/2d3e61769d.js" crossorigin="anonymous"></script>
    <title>{title} | Ioannis Amaxopoulos</title>
  </head>
  <body>
    <div class="layout">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>

  <style>
    .layout {
      background-color: hsl(210 37% 8% / 0.98);
      min-height: 100vh;
      color: #fff;
      z-index: 1;
    }
  </style>
</html>
